<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/zgodovinaCena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/zgodovinaMesec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/zgodovinaDan" />

    <TextView
        android:id="@+id/zgodovinaImeTrgovine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/zgodovinaOpisNakupa"
        app:layout_constraintEnd_toStartOf="@+id/zgodovinaCena"
        app:layout_constraintStart_toEndOf="@+id/zgodovinaAvtor"
        app:layout_constraintTop_toTopOf="@+id/zgodovinaDan" />

    <TextView
        android:id="@+id/zgodovinaOpisNakupa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/zgodovinaMesec"
        app:layout_constraintEnd_toStartOf="@+id/zgodovinaCena"
        app:layout_constraintStart_toEndOf="@+id/zgodovinaAvtor"
        app:layout_constraintTop_toBottomOf="@+id/zgodovinaImeTrgovine" />

    <ImageView
        android:id="@+id/zgodovinaAvtor"
        android:layout_width="47dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zgodovinaDan"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_avtor" />

    <TextView
        android:id="@+id/zgodovinaDan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/zgodovinaMesec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/zgodovinaMesec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/zgodovinaDan"
        app:layout_constraintStart_toStartOf="@+id/zgodovinaDan"
        app:layout_constraintTop_toBottomOf="@+id/zgodovinaDan" />
</androidx.constraintlayout.widget.ConstraintLayout>